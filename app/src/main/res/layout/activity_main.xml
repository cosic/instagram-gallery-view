<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ltst.instagramgallerysample.MainActivity">

    <com.ltst.instagramgallerysample.GalleryAppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:elevation="0dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#50ff4444"
        />

    </com.ltst.instagramgallerysample.GalleryAppBarLayout>

    <com.ltst.instagramgallerysample.GalleryRecyclerView
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        app:layoutManager="GridLayoutManager">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                android:background="#5099cc00"
                android:text="1"
                style="@style/TextViewStyle"/>

            <TextView
                android:background="#5000ddff"
                android:text="2"
                style="@style/TextViewStyle"/>

            <TextView
                android:background="#50ffbb33"
                android:text="3"
                style="@style/TextViewStyle"/>

            <TextView
                android:background="#50aa66cc"
                android:text="4"
                style="@style/TextViewStyle"/>

            <TextView
                android:background="#504ef3fc"
                android:text="5"
                style="@style/TextViewStyle"/>

            <TextView
                android:background="#503ffc19"
                android:text="6"
                style="@style/TextViewStyle"/>

        </LinearLayout>

    </com.ltst.instagramgallerysample.GalleryRecyclerView>

</android.support.constraint.ConstraintLayout>
