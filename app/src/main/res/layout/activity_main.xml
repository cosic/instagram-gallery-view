<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ltst.instagramgallerysample.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#50ff4444"
        />

    </android.support.design.widget.AppBarLayout>

    <com.ltst.instagramgallerysample.GalleryRecyclerView
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="GridLayoutManager">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#5099cc00"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#5000ddff"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#50ffbb33"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#500099cc"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#50ff4444"
            />

        </LinearLayout>

    </com.ltst.instagramgallerysample.GalleryRecyclerView>

</android.support.constraint.ConstraintLayout>
